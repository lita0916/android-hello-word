<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admin.helloword.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/cV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/c"
        android:layout_alignBottom="@+id/c"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="泵径（mm）" />

    <EditText
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/f"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/f"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="false" />

    <TextView
        android:id="@+id/dV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/d"
        android:layout_alignBottom="@+id/d"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="泵深（m）" />

    <EditText
        android:id="@+id/d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/c"
        android:layout_alignStart="@+id/c"
        android:layout_below="@+id/cV"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="false" />

    <TextView
        android:id="@+id/eV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/e"
        android:layout_alignBottom="@+id/e"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="冲程（m）" />

    <EditText
        android:id="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/d"
        android:layout_alignStart="@+id/d"
        android:layout_below="@+id/dV"
        android:layout_gravity="center_horizontal|top"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="false" />

    <TextView
        android:id="@+id/fV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/e"
        android:text="冲次（/min）" />

    <EditText
        android:id="@+id/f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/g"
        android:layout_alignStart="@+id/g"
        android:layout_below="@+id/eV"
        android:layout_gravity="center_horizontal|top"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="false" />

    <TextView
        android:id="@+id/gV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/f"
        android:text="25杆（m）" />

    <EditText
        android:id="@+id/g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/h"
        android:layout_alignStart="@+id/h"
        android:layout_below="@+id/fV"
        android:layout_gravity="center_horizontal|top"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="false" />

    <EditText
        android:id="@+id/h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/i"
        android:layout_alignStart="@+id/i"
        android:layout_below="@+id/gV"
        android:layout_gravity="center_horizontal|top"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="false" />

    <TextView
        android:id="@+id/hV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/g"
        android:text="22杆（m）" />


    <TextView
        android:id="@+id/iV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/h"
        android:text="19杆（m）" />

    <EditText
        android:id="@+id/i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/a"
        android:layout_alignStart="@+id/a"
        android:layout_below="@+id/hV"
        android:layout_gravity="center_horizontal|top"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="false" />

    <TextView
        android:id="@+id/aV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/i"
        android:text="38杆（m）" />

    <EditText
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/j"
        android:layout_alignStart="@+id/j"
        android:layout_below="@+id/iV"
        android:layout_gravity="center_horizontal|top"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="false" />

    <TextView
        android:id="@+id/jV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/a"
        android:text="油管外径（mm）" />

    <TextView
        android:id="@+id/kV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/jV"
        android:layout_marginTop="18dp"
        android:text="油管内径（mm）" />

    <TextView
        android:id="@+id/lV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/k"
        android:text="含水" />

    <EditText
        android:id="@+id/j"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aV"
        android:layout_gravity="center_horizontal|top"
        android:layout_toEndOf="@+id/jV"
        android:layout_toRightOf="@+id/jV"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="false" />

    <EditText
        android:id="@+id/k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/j"
        android:layout_alignStart="@+id/j"
        android:layout_below="@+id/jV"
        android:layout_gravity="center_horizontal|top"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="false" />

    <EditText
        android:id="@+id/l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/k"
        android:layout_alignStart="@+id/k"
        android:layout_below="@+id/kV"
        android:layout_gravity="center_horizontal|top"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="false" />

    <Button
        android:id="@+id/calc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/resultV"
        android:layout_toLeftOf="@+id/reset_btn"
        android:layout_toStartOf="@+id/reset_btn" />

    <TextView
        android:id="@+id/resultV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="防冲距（m）"
        android:layout_below="@+id/l"
        android:layout_alignRight="@+id/fV"
        android:layout_alignEnd="@+id/fV" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_alignTop="@+id/resultV"
        android:layout_alignLeft="@+id/l"
        android:layout_alignStart="@+id/l"
        android:layout_alignRight="@+id/l"
        android:layout_alignEnd="@+id/l"
        android:layout_above="@+id/reset_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重置"
        android:id="@+id/reset_btn"
        android:layout_alignTop="@+id/calc_btn"
        android:layout_alignLeft="@+id/l"
        android:layout_alignStart="@+id/l"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp" />

</RelativeLayout>
